    <!-- </div> -->
  <!-- </div> -->

  <div class="row details">
    <div class="col-md-2 avatar">
      <img src={{a.actor_avator}} alt={{a.actor_username}} height="100" width="100">
    </div>
    <div class="col-md-10 actor_metadata">
      <ul>
        <li>Name: {{a.actor_name}}</li>
        <li>Description:  {{a.actor_description}}</li>
        <li>Username: {{a.actor_username}}</li>
        <li>Profile: <a href={{a.actor_url}}>{{a.actor_url}}</a></li>
        <li>Location: {{a.longitude}} {{a.latitude}}</li>
      </ul>
    </div>
  </div>
{{/each}}
{{outlet}}
